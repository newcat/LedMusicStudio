{
  "name": "ledmusicstudio",
  "version": "0.0.0",
  "main": "electron/electron.js",
  "license": "GPL-3.0",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "electron": "yarn build:electron && wait-on tcp:3000 && cross-env IS_DEV=true electron electron-dist/electron.js",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "vue-tsc --noEmit && cross-env ELECTRON=true vite build",
    "app:build": "yarn build:for:electron && yarn electron:builder",
    "build:wasm": "wasm-pack build ./src/rust --target web",
    "build:electron": "tsc -p tsconfig.main.json"
  },
  "dependencies": {
    "@ckpack/vue-color": "^1.4.1",
    "@mdi/font": "^7.2.96",
    "@vueuse/core": "^9.13.0",
    "axios": "^1.3.5",
    "baklavajs": "^2.0.2-beta.3",
    "bson": "^4.7.2",
    "chroma-js": "^2.4.2",
    "comlink": "^4.4.1",
    "jszip": "^3.10.1",
    "open-simplex-noise": "^2.5.0",
    "pinia": "^2.0.34",
    "primeicons": "^6.0.1",
    "primevue": "^3.26.1",
    "serialport": "^10.5.0",
    "splitpanes": "^3.1.5",
    "uuid": "^9.0.0",
    "vue": "^3.2.47",
    "vue-router": "4.1.6"
  },
  "devDependencies": {
    "@types/bson": "^4.2.0",
    "@types/chroma-js": "^2.4.0",
    "@types/node": "18.15.11",
    "@types/offscreencanvas": "^2019.7.0",
    "@types/serialport": "^8.0.2",
    "@types/uuid": "^9.0.1",
    "@vitejs/plugin-vue": "^4.1.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "electron": "^24.0.0",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "postcss": "^8.4.21",
    "rollup-plugin-visualizer": "^5.9.0",
    "sass": "^1.61.0",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "vue-tsc": "^1.3.12",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.github.newcat.ledmusicstudio",
    "productName": "LedMusicStudio",
    "copyright": "Copyright Â© 2022 newcat",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
