{
    "name": "ledmusicstudio",
    "version": "0.0.0",
    "main": "electron-dist/electron.js",
    "license": "GPL-3.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc --noEmit && vite build",
        "serve": "vite preview",
        "electron": "yarn build:electron && wait-on tcp:3000 && cross-env IS_DEV=true electron electron-dist/electron.js",
        "electron:pack": "electron-builder --dir",
        "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
        "electron:builder": "electron-builder",
        "build:for:electron": "vue-tsc --noEmit && cross-env ELECTRON=true vite build",
        "app:build": "yarn build:for:electron && yarn build:electron && yarn electron:builder",
        "build:wasm": "wasm-pack build ./src/rust --target web",
        "build:electron": "tsc -p tsconfig.main.json && node ./postbuild.mjs",
        "lint": "eslint --ext .js,.ts,.vue src"
    },
    "dependencies": {
        "@ckpack/vue-color": "^1.6.0",
        "@codemirror/lang-javascript": "^6.2.2",
        "@codemirror/theme-one-dark": "^6.1.2",
        "@mdi/font": "^7.4.47",
        "@types/splitpanes": "^2.2.6",
        "@vueuse/core": "^11.3.0",
        "ajv": "^8.17.1",
        "axios": "^1.7.7",
        "baklavajs": "^2.6.0",
        "chroma-js": "^3.1.2",
        "codemirror": "^6.0.1",
        "comlink": "^4.4.2",
        "fflate": "^0.8.2",
        "fft.js": "^4.0.4",
        "jszip": "^3.10.1",
        "lamejs": "^1.2.1",
        "msgpackr": "^1.11.2",
        "open-simplex-noise": "^2.5.0",
        "pinia": "^2.2.6",
        "primeicons": "^7.0.0",
        "primevue": "^3.53.0",
        "splitpanes": "^3.1.5",
        "three": "^0.163.0",
        "uuid": "^11.0.3",
        "vue": "^3.5.13",
        "vue-codemirror": "^6.1.1",
        "vue-router": "4.4.5"
    },
    "devDependencies": {
        "@types/chroma-js": "^2.4.4",
        "@types/node": "22.9.3",
        "@types/offscreencanvas": "^2019.7.3",
        "@types/three": "^0.170.0",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "@vitejs/plugin-vue": "^5.2.0",
        "autoprefixer": "^10.4.20",
        "concurrently": "^9.1.0",
        "cross-env": "^7.0.3",
        "electron": "^33.2.0",
        "electron-builder": "^25.1.8",
        "electron-devtools-installer": "^3.2.0",
        "eslint": "^8.57.1",
        "eslint-plugin-vue": "^9.31.0",
        "postcss": "^8.4.49",
        "rollup-plugin-visualizer": "^5.12.0",
        "sass": "^1.81.0",
        "tailwindcss": "^3.4.15",
        "typescript": "^5.7.2",
        "vite": "^5.4.11",
        "vue-tsc": "^2.1.10",
        "wait-on": "^8.0.1"
    },
    "build": {
        "appId": "com.github.newcat.ledmusicstudio",
        "productName": "LedMusicStudio",
        "copyright": "Copyright Â© 2024 newcat",
        "mac": {
            "category": "public.app-category.utilities"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "files": [
            "dist/**/*",
            "electron-dist/**/*"
        ],
        "directories": {
            "buildResources": "assets",
            "output": "dist_electron"
        }
    },
    "packageManager": "yarn@4.0.2"
}
